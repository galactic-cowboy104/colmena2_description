  <joint name="ch_to_bl_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="-0.002361 -0.000004 0.009671"/>
  </joint>

  <joint name="ls_to_ch_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_sprocket"/>
    <origin xyz="-0.097639 0.110004 -0.009671"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="rs_to_ch_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_sprocket"/>
    <origin xyz="-0.097639 -0.109996 -0.009671"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="lw_to_ch_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0.102361 0.110004 -0.009671"/>
    <axis xyz="0 1 0"/>
    <mimic joint="ls_to_ch_joint" multiplier="1" offset="0"/>
  </joint>

  <joint name="rw_to_ch_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0.102361 -0.109996 -0.009671"/>
    <axis xyz="0 1 0"/>
    <mimic joint="rs_to_ch_joint" multiplier="1" offset="0"/>
  </joint>
  
  <joint name="lt_to_ch_joint" type="fixed">
    <parent link="chassis"/>
    <child link="left_track"/>
    <origin xyz="0.002356 0.110004 -0.009671"/>
  </joint>

  <joint name="rt_to_ch_joint" type="fixed">
    <parent link="chassis"/>
    <child link="right_track"/>
    <origin xyz="0.002356 -0.109996 -0.009671"/>
  </joint>
  
</robot>