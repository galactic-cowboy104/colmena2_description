      <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
      <inertia 
        ixx="0.0000098" 
        ixy="0.0" 
        ixz="0.0" 
        iyy="0.0000142" 
        iyz="0.0" 
        izz="0.0000098"
