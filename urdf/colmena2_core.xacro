  <link name="left_track">
    <inertial>
      <mass value="0.022541"/>
      <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
      <inertia 
        ixx="0.0001033" 
        ixy="0.0" 
        ixz="0.0" 
        iyy="0.0009194" 
        iyz="0.0" 
        izz="0.0008376"
      />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find colmena2_description)/meshes/track.stl" scale="0.001 0.001 0.001"/>
