      <inertia 
        ixx="0.0000608" 
        ixy="0.0" 
        ixz="0.0" 
        iyy="0.0001084" 
        iyz="0.0" 
        izz="0.0000608"
      />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
